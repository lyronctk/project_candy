<form action="/orders" class="new_order" id="new_order" method="post">

<h1 align="center">Order Now!</h1>

<br></br>

<p class="col-md-6">*Required Fields</p>

<div class="row">
  <div class="col-md-7">
    <%= form_for(@order) do |f| %>
      
    
      <%= f.label :nameFirst, "*First Name" %>
    <p>
      <%= f.text_field :nameFirst, :required => true %>
    </p>
    
       <%= f.label :nameLast, "*Last Name" %>
    <p>
      <%= f.text_field :nameLast, :required => true %>
    </p>
    
    
       <%= f.label :email, "*Email" %>
    <p>
      <%= f.email_field :email, :required => true %>
    </p>
    
    
      <%= f.label :address, "*Address" %>
    <p>
      <%= f.text_field :address, :required => true %>
    </p>
      
       <%= f.label :addressLine2, "Address Line 2" %>
    <p>
      <%= f.text_field :addressLine2 %>
    </p>
    
     <%= f.label :addressLine3, "Address Line 3" %>
    <p>
      <%= f.text_field :addressLine3 %>
    </p>
    
      <%= f.label :phone, "*Phone" %>
    <p>
      <%= f.text_field :phone, :required => true %>
    </p>
      
      <%= f.label :alternatePhonephone, "Alternate Phone" %>
    <p>
      <%= f.text_field :alternatePhone %>
    </p>
    
    <%= f.label :city, "*City" %>
    <p>
      <%= f.text_field :city, :required => true %>
    </p>
    
    <%= f.label :state, "*State" %>
    <p>
      <%= f.text_field :state, :required => true %>
    </p>
    
    <%= f.label :zipCode, "*Zip Code" %>
    <p>
      <%= f.text_field :zipCode, :required => true %>
    </p>
      <%= f.submit "Order", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
