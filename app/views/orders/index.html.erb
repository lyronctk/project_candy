
<h1>All Orders</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>         </th>
      <th>Last Name</th>
      <th>         </th>
      <th>Email</th>
      <th>     </th>
      <th>Address</th>
      <th>     </th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <% @order.each do |order| %>
      <tr>
          <td><%= order.nameFirst %></td>
          <td>___</td>
          <td><%= order.nameLast %></td>
          <td>___</td>
          <td><%= order.email %></td>
          <td>___</td>
          <td><%= order.address %></td>
          <td>___</td>
          <td><%= order.phone %></td>
          <td>
          <%= link_to "Delete", order, method: :delete,
                                  data: { confirm: "You sure?" } %>
          </td>
      </tr>
  <% end %>
</table>